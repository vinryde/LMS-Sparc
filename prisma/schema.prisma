

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  courses       Course[]

  role       userRole? @default(user)
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?
  enrollment Enrollment[]
  lessonProgress LessonProgress[]
  userQuizAnswer UserQuizAnswer[]
  quizSubmissions QuizSubmission[]
  userAssessmentAnswers UserAssessmentAnswer[]
  assessmentSubmissions AssessmentSubmission[]
  feedbackSubmissions FeedbackSubmission[]

  @@unique([email])
  @@map("user")
}
enum userRole {
  Admin
  Student
  user
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Course {
  id String @id @default(uuid())

  title       String
  description String
  fileKey     String
  price       Int
  duration    Int
  level       CourseLevel @default(Beginner)

  category         String
  smallDescription String
  slug             String @unique

  status CourseStatus @default(Draft)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  chapter  Chapter[]
  enrollment Enrollment[]
  assessment Assessment?
  

}

enum CourseLevel {
  Beginner
  Intermediate
  Advanced
}

enum CourseStatus {
  Draft
  Published
  Archived
}

model Chapter{
  id String @id @default(uuid())

  title String
  position Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String

  lesson Lesson[]
}

model Lesson{
  id String @id @default(uuid())

  title String
  description String?
  thumbnailKey String?
  videoKey String? 
  documentKey String?
  position Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId String
  lessonProgress LessonProgress[]
  quiz Quiz?
  feedback Feedback?
  resources Resource[]
}

model Enrollment{
  id String @id @default(uuid())
  status EnrollmentStatus @default(Active)
  expiresAt DateTime? 
  isExpired Boolean @default(false) 
  expirationDisabled Boolean @default(false) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  @@unique([userId, courseId])
}

enum EnrollmentStatus {
  Active
  Completed
  Dropped
  Expired
}

model LessonProgress{
  id String @id @default(uuid())
  completed Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  @@unique([userId, lessonId])
  
  
}

model Quiz {
  id        String   @id @default(uuid())
  title     String
  position  Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
  
  questions Question[]
  submissions QuizSubmission[]
  
  @@unique([lessonId]) // One quiz per lesson
}

model Question {
  id       String @id @default(uuid())
  text     String
  position Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  quiz     Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId   String
  
  options  QuestionOption[]
  userAnswers UserQuizAnswer[]
}

model QuestionOption {
  id        String  @id @default(uuid())
  text      String
  isCorrect Boolean @default(false)
  position  Int
  
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  
  userAnswers UserQuizAnswer[]
}

model UserQuizAnswer {
  id        String   @id @default(uuid())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  
  selectedOption   QuestionOption @relation(fields: [selectedOptionId], references: [id], onDelete: Cascade)
  selectedOptionId String
  
  @@unique([userId, questionId]) // One answer per question per user
}

model QuizSubmission {
  id        String   @id @default(uuid())
  
  score          Int
  totalQuestions Int
  percentage     Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId String
  
  @@unique([userId, quizId])
}

model Feedback {
  id          String   @id @default(uuid())
  title       String
  description String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
  
  submissions FeedbackSubmission[]
  
  @@unique([lessonId]) // One feedback per lesson
}

model FeedbackSubmission {
  id        String   @id @default(uuid())
  
  content   String   // The student's feedback text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  feedbackId String
  
  @@unique([userId, feedbackId]) // One submission per user per feedback
}

model Assessment {
  id        String   @id @default(uuid())
  title     String
  description String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String
  sections  AssessmentSection[]
  submissions AssessmentSubmission[]
  @@unique([courseId])

}

model AssessmentSection {
  id       String @id @default(uuid())
  title    String
  type     AssessmentSectionType
  position Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  assessmentId String
  
  questions AssessmentQuestion[]
}

enum AssessmentSectionType {
  KNOWLEDGE
  ATTITUDE
  BEHAVIOUR
}

model AssessmentQuestion {
  id       String @id @default(uuid())
  text     String
  position Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  section   AssessmentSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId String
  
  options AssessmentQuestionOption[]
  userAnswers UserAssessmentAnswer[]
}

model AssessmentQuestionOption {
  id        String  @id @default(uuid())
  text      String
  isCorrect Boolean @default(false) // Only used for KNOWLEDGE section
  position  Int
  
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  
  userAnswers UserAssessmentAnswer[]
}

model UserAssessmentAnswer {
  id        String   @id @default(uuid())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  
  selectedOption   AssessmentQuestionOption @relation(fields: [selectedOptionId], references: [id], onDelete: Cascade)
  selectedOptionId String
  
  @@unique([userId, questionId])
}

model AssessmentSubmission {
  id        String   @id @default(uuid())
  
  knowledgeScore     Int
  knowledgeTotal     Int
  knowledgePercentage Int
  
  completed Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  assessmentId String
  
  @@unique([userId, assessmentId])
}
model Resource {
  id          String       @id @default(uuid())
  title       String
  type        ResourceType
  position    Int
  
  // Fields for different resource types
  textContent String?      // For TEXT type
  linkUrl     String?      // For LINK type
  imageKey    String?      // For IMAGE type
  documentKey String?      // For DOCUMENT type
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  lesson      Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId    String
}

enum ResourceType {
  TEXT
  LINK
  IMAGE
  DOCUMENT
}